<style type="text/css" media="screen">
  body {
    font-size: 30px;
    text-align: center;
    color: #222;
  }

  #the-form {
    width: 900px;
    text-align: left;
    margin: 15% auto 0;
  }

  form {
    margin-left: 15px;
    margin-top: 1em;
  }

  input {
    font-size: 30px;
    padding: 2px;
  }
  
  input.invalid {
    border: 2px solid #f71;
    background: #fda;
  }
  
  input.invalid:focus {
    outline: 2px solid #f71;
  }

  h1 {
    letter-spacing: 6px;
  }

  h1 small {
    font-size: 18px;
  }
</style>

<div id="the-form">
  <h1>
    Thunder <small>Before Lightning (talks) comes thunder.</small>
  </h1>
  
  <% if flash.has?(:error) %>
    <div class="flash error">
      Oops!
      <strong>&ldquo;<%= flash[:error] %>&rdquo;</strong> isn't on the GitHub. 
      <br>
      Sure you spelled it right?
    </div>
  <% end %>

  <form action="/user">
    <label>
      Enter your GitHub username:
      <input name="username" type="text" class="<%= flash[:invalid] %>">
    </label>
    <input type="submit" value="Lightning!">
  </form>

  <a href="http://github.com/nakajima/thunder-app/tree/master"><img style="position: absolute; top: 0; right: 0; border: 0;" src="http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub" /></a>
</div>
